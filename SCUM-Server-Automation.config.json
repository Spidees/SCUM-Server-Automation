{
  "//": "==============================================================================",
  "//": "SCUM Server Automation - Complete Configuration File v2.1.5",
  "//": "Comprehensive dedicated server management and Discord integration",
  "//": "==============================================================================",
  
  "//": "------------------------------------------------------------------------------",
  "//": "CORE SYSTEM CONFIGURATION",
  "//": "Basic server paths, service settings and network configuration",
  "//": "------------------------------------------------------------------------------",
  "serviceName": "SCUMSERVER",
  "appId": "3792580",
  "publicIP": "99.99.99.99",
  "publicPort": "7042",
  
  "//": "File system paths (relative to automation root, don't need editing unless you change directory structure)",
  "serverDir": "./server",
  "savedDir": "./server/SCUM/Saved",
  "steamCmd": "./steamcmd/steamcmd.exe",
  "backupRoot": "./backups",
  
  "//": "------------------------------------------------------------------------------",
  "//": "AUTOMATED OPERATIONS & SCHEDULING",
  "//": "Server restart schedules, backup automation and update management",
  "//": "------------------------------------------------------------------------------",
  
  "//": "Scheduled restart times (24h format)",
  "restartTimes": [
    "03:00",
    "09:00",
    "15:00",    
    "21:00"
  ],
  
  "//": "Backup automation settings",
  "periodicBackupEnabled": true,
  "backupIntervalMinutes": 60,
  "maxBackups": 10,
  "compressBackups": true,
  "runBackupOnStart": false,
  "preRestartBackupEnabled": false,
  
  "//": "Update management",
  "runUpdateOnStart": false,
  "updateCheckIntervalMinutes": 15,
  "updateDelayMinutes": 10,
  
  "//": "------------------------------------------------------------------------------",
  "//": "STABILITY & SAFETY MECHANISMS",
  "//": "Cooldowns, timeouts and safety limits to prevent system issues",
  "//": "------------------------------------------------------------------------------",
  "autoRestart": true,
  "autoRestartCooldownMinutes": 2,
  "maxConsecutiveRestartAttempts": 3,
  "serverStartupTimeoutMinutes": 10,
  "serverShutdownTimeoutMinutes": 5,
  
  "//": "------------------------------------------------------------------------------",
  "//": "LOGGING & MONITORING SYSTEM",
  "//": "Log management, monitoring intervals and debugging options",
  "//": "------------------------------------------------------------------------------",
  "enableDetailedLogging": true,
  "maxLogFileSizeMB": 100,
  "logRotationEnabled": true,
  "consoleLogLevel": "Info",
  "monitoringIntervalSeconds": 1,
  "logMonitoringEnabled": true,
  "logMonitoringIntervalSeconds": 1,
  "preventStatusRegression": true,
  
  "//": "------------------------------------------------------------------------------",
  "//": "PERFORMANCE MONITORING & ALERTS",
  "//": "Server performance thresholds and alerting configuration",
  "//": "------------------------------------------------------------------------------",
  "performanceAlertThreshold": "Critical",
  "performanceAlertCooldownMinutes": 5,
  "performanceLogIntervalMinutes": 1,
  
  "//": "Performance level thresholds (players count)",
  "performanceThresholds": {
    "excellent": 30,
    "good": 20,
    "fair": 15,
    "poor": 10,
    "critical": 4
  },
  
  "//": "==============================================================================",
  "//": "DISCORD INTEGRATION CONFIGURATION",
  "//": "Complete Discord bot setup including notifications, commands and live embeds",
  "//": "==============================================================================",
  "Discord": {
    "//": "Bot authentication and server identification",
    "Token": "EDIT_DISCORD_BOT_TOKEN",
    "GuildId": "EDIT_DISCORD_SERVER_ID",
    
    "//": "Bot presence and activity settings",
    "Presence": {
      "Activity": "SCUM Server Automation",
      "Status": "online",
      "Type": "Watching",
      "DynamicActivity": true,
      "OfflineActivity": "OFFLINE",
      "OnlineActivityFormat": "{players} / {maxPlayers} players",
      "ActivityUpdateInterval": 60
    },
    
    "//": "Live status embeds and leaderboards",
    "LiveEmbeds": {
      "StatusChannel": "EDIT_CHANNEL_ID_FOR_STATUS",
      "LeaderboardsChannel": "EDIT_CHANNEL_ID_FOR_LEADERBOARDS",
      "StatusUpdateInterval": 60,
      "LeaderboardUpdateInterval": 300,
      "//": "Server timezone offset from UTC (hours)",
      "//": "Examples: +1 (Central Europe), +2 (Eastern Europe), -5 (Eastern US), -8 (Pacific US), 0 (UTC)",
      "TimezoneOffset": "+1",
      "Images": {
        "ServerStatus": "https://playhub.cz/scum/3.gif",
        "Leaderboards": {
          "Weekly": "https://playhub.cz/scum/2.gif",
          "AllTime": "https://playhub.cz/scum/4.gif"
        }
      }
    },
    
    "//": "Notification system configuration",
    "Notifications": {
      "SuppressStatusChanges": false,
      
      "//": "Channel assignments for different user groups",
      "Channels": {
        "Admin": "EDIT_CHANNEL_ID_FOR_ADMIN_NOTIFICATIONS",
        "Players": "EDIT_CHANNEL_ID_FOR_PLAYER_NOTIFICATIONS"
      },
      
      "//": "Role IDs for mentioning specific user groups",
      "Roles": {
        "Admin": [
          "EDIT_ADMIN_ROLE_ID1",
          "EDIT_ADMIN_ROLE_ID2"
        ],
        "Players": [
          "EDIT_PLAYER_ROLE_ID1",
          "EDIT_PLAYER_ROLE_ID2"
        ]
      },
      
      "//": "Notification routing - which events go to which user groups",
      "NotificationTypes": {
        "//": "Admin-only notifications (technical, system events)",
        "AdminOnly": [
          "manager.started",
          "manager.stopped",
          "backup.started",
          "backup.completed",
          "backup.failed",
          "update.available",
          "update.started",
          "update.completed",
          "update.failed",
          "performance.critical",
          "performance.poor",
          "performance.warning",
          "performance.alert",
          "service.started",
          "service.stopped",
          "service.starting",
          "service.stopping",
          "server.started",
          "server.stopped",
          "server.starting",
          "server.shutting_down",
          "server.loading",
          "server.online",
          "server.offline",
          "admin.alert",
          "error"
        ],
        "//": "Player notifications (gameplay-relevant events)",
        "Player": [
          "server.online",
          "server.offline",
          "update.started",
          "updateWarning15",
          "updateWarning5",
          "updateWarning1",
          "update.completed",
          "restartWarning15",
          "restartWarning5",
          "restartWarning1",
          "server.scheduledRestart",
          "manualStopWarning",
          "manualRestartWarning",
          "manualUpdateWarning"
        ]
      }
    },
    
    "//": "Chat relay system (Game Chat to Discord)",
    "ChatRelay": {
      "Enabled": true,
      "Channels": {
        "Players": "EDIT_CHANNEL_ID_FOR_PLAYER_CHAT",
        "Admin": "EDIT_CHANNEL_ID_FOR_ADMIN_CHAT"
      },
      "ChatTypes": {
        "global": true,
        "squad": true,
        "local": true
      },
      "MaxMessageLength": 500,
      "UpdateInterval": 5
    },
    
    "//": "Discord command system",
    "Commands": {
      "Enabled": true,
      
      "//": "Command channels and permissions",
      "Channels": {
        "Admin": "EDIT_CHANNEL_ID_FOR_ADMIN_COMMANDS",
        "Players": "EDIT_CHANNEL_ID_FOR_PLAYER_COMMANDS"
      },
      "Roles": {
        "Admin": [
          "EDIT_ADMIN_ROLE_ID1",
          "EDIT_ADMIN_ROLE_ID2"
        ],
        "Players": [
          "EDIT_PLAYER_ROLE_ID1",
          "EDIT_PLAYER_ROLE_ID2"
        ]
      },
      
      "//": "Command configuration",
      "Prefix": "!",
      "DeleteCommandMessage": false,
      "CommandCooldownSeconds": 2,
      
      "//": "Available admin commands (server management)",
      "AdminCommands": [
        "server_restart",
        "server_stop",
        "server_start",
        "server_status",
        "server_update",
        "server_validate",
        "server_backup",
        "server_cancel",
        "server_restart_skip"
      ],
      
      "//": "Available player commands (TODO)",
      "PlayerCommands": [
        "server_info",
        "player_stats",
        "help"
      ]
    }
  },
  
  "//": "==============================================================================",
  "//": "ADVANCED FEATURES CONFIGURATION",
  "//": "Additional server features and log monitoring systems",
  "//": "==============================================================================",
  "SCUMLogFeatures": {
    "//": "Kill log system",
    "KillFeed": {
      "AdminEnabled": true,
      "AdminChannel": "EDIT_CHANNEL_ID_FOR_ADMIN_KILL_LOG",
      "PlayersEnabled": true,
      "PlayersChannel": "EDIT_CHANNEL_ID_FOR_PLAYERS_KILL_LOG",
      "PlayersDelayEnabled": true,      
      "PlayersDelaySeconds": 1800    
    },
    "//": "Event kill log system",
    "EventKillFeed": {
      "AdminEnabled": true,
      "AdminChannel": "EDIT_CHANNEL_ID_FOR_ADMIN_EVENT_KILL_LOG",
      "PlayersEnabled": true,
      "PlayersChannel": "EDIT_CHANNEL_ID_FOR_PLAYERS_EVENT_KILL_LOG"      
    },
    "//": "Admin command log system",
    "AdminFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNEL_ID_FOR_ADMIN_COMMAND_LOG"
    },
    "//": "Violations log system",
    "ViolationsFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNELD_ID_FOR_VIOLATIONS_LOG"
    },
    "//": "Fame points log system",
    "FamePointsFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNEL_ID_FOR_FAME_POINTS_LOG"
    },
    "//": "Login log system",
    "LoginFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNEL_ID_FOR_LOGIN_LOG"
    },
    "//": "Economy log system",
    "EconomyFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNEL_ID_FOR_ECONOMY_LOG"
    },
    "//": "Vehicle log system",
    "VehicleFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNEL_ID_FOR_VEHICLE_LOG"
    },
    "//": "Raid protection log system",
    "RaidProtectionFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNEL_ID_FOR_RAID_PROTECTION_LOG"
    },
    "//": "Gameplay log system",
    "GameplayFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNEL_ID_FOR_GAMEPLAY_LOG"
    },
    "//": "Quest log system",
    "QuestFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNEL_ID_FOR_QUEST_LOG"
    },
    "//": "Chest log system",
    "ChestFeed": {
      "Enabled": true,
      "Channel": "EDIT_CHANNEL_ID_FOR_CHEST_LOG"
    }
  }
}